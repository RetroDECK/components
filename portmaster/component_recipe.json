{
  "portmaster": [
    {
      "source_url": "https://github.com/PortsMaster/PortMaster-GUI/releases/download/{VERSION}/retrodeck.portmaster.zip",
      "source_type": "github_release",
      "version": "$PORTMASTER_DESIRED_VERSION",
      "extraction_type": "local",
      "assets": [
        {
          "type": "file-rename",
          "source": "$WORKDIR/retrodeck.portmaster.zip",
          "dest": "$COMPONENT_ARTIFACT_ROOT/PortMaster.zip"
        },
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$SOURCE_VERSION"
        },
        {
          "type": "dir",
          "source": "$REPO_ROOT/$COMPONENT_NAME/assets/rd_config",
          "dest": "$COMPONENT_ARTIFACT_ROOT/rd_config"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/assets/harbourmaster",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_launcher.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_manifest.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_recipe.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_prepare.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_update.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        }
      ]
      ,
      "libs": [
        {
          "library": "libSDL2.so",
          "runtime_name": "org.kde.Sdk",
          "runtime_version": "6.7",
          "dest": "shared-libs"
        },
        {
          "library": "libSDL2_image-2.0.so",
          "runtime_name": "org.kde.Sdk",
          "runtime_version": "6.7",
          "dest": "shared-libs"
        },
        {
          "library": "libSDL2_ttf-2.0.so.0",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "6.7",
          "dest": "shared-libs"
        },
        {
          "library": "liblzma.so.5",
          "runtime_name": "org.freedesktop.Platform",
          "runtime_version": "25.08",
          "dest": "shared-libs"
        }
      ]
    }
  ]
}
