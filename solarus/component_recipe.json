{
  "solarus": [
    {
      "source_url": "https://gitlab.com/solarus-games/solarus/-/releases/solarus-launcher-*-linux-x64.tar.gz",
      "source_type": "gitlab-release",
      "version": "$SOLARUS_DESIRED_VERSION",
      "extraction_type": "archive",
      "assets": [
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$FRAMEWORK_DESIRED_VERSION"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_functions.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_launcher.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_manifest.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_recipe.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_prepare.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        }
      ]
    },
    {
      "source_url": "$EXTRACTED_PATH/solarus-launcher-v*-linux-x64.AppImage",
      "source_type": "local",
      "extraction_type": "appimage",
      "assets": [
        {
          "type": "dir",
          "source": "usr/bin",
          "dest": "bin"
        },
        {
          "type": "dir",
          "source": "usr/plugins/",
          "dest": "plugins"
        },
        {
          "type": "dir",
          "source": "$REPO_ROOT/$COMPONENT_NAME",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$SOURCE_VERSION"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/assets/libdeflate.so.0",
          "dest": "lib"
        }
      ],
      "libs": [
        {
          "library": "libSDL2_image-2.0.so.0",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "6.9",
          "dest": "shared-libs"
        },
        {
          "library": "libSDL2_ttf-2.0.so.0.2200.0",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "6.9",
          "dest": "shared-libs"
        },
        {
          "library": "libsolarus.so.2.0.1",
          "source": "usr/lib",
          "dest": "shared-libs"
        },
        {
          "library": "libluajit-5.1.so.2.1.0",
          "source": "usr/lib",
          "dest": "shared-libs"
        },
        {
          "library": "libmodplug.so.1.0.0",
          "source": "usr/lib",
          "dest": "shared-libs"
        },
        {
          "library": "libphysfs.so.3.0.2",
          "source": "usr/lib",
          "dest": "shared-libs"
        }
      ]
    }
  ]
}
