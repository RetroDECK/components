{
  "solarus": [
    {
      "source_url": "https://downloads.solarus-games.org/solarus/linux/solarus-launcher-v{VERSION}-linux-amd64.zip",
      "source_type": "http",
      "version": "$SOLARUS_DESIRED_VERSION",
      "extraction_type": "archive",
      "assets": [
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$FRAMEWORK_DESIRED_VERSION"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_functions.sh",
           "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_launcher.sh",
           "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_manifest.json",
           "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_prepare.sh",
           "dest": "$COMPONENT_ARTIFACT_ROOT"
        }
      ]
    },
    {
      "source_url": "$EXTRACTED_PATH/solarus-launcher.AppImage",
      "source_type": "local",
      "extraction_type": "appimage",
      "assets": [
        {
          "type": "dir",
          "source": "usr/bin",
          "dest": "bin"
        },
        {
          "type": "dir",
          "source": "usr/plugins/",
          "dest": "plugins"
        },
        {
          "type": "dir",
          "source": "$REPO_ROOT/$COMPONENT_NAME",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$SOURCE_VERSION"
        }
      ],
      "libs": [
        {
          "library": "libQt6Gui.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libQt6Core.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libQt6Multimedia.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libQt6Svg.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libQt6Network.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libQt6DBus.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libQt6Widgets.so.6",
          "runtime_name": "org.kde.Platform",
          "runtime_version": "$DESIRED_QT6_RUNTIME_VERSION",
          "dest": "lib"
        },
        {
          "library": "libphysfs.so.1",
          "source": "usr/lib",
          "dest": "lib"
        },
        {
          "library": "libmodplug.so.1",
          "source": "usr/lib",
          "dest": "lib"
        },
        {
          "library": "libluajit-5.1.so.2",
          "source": "usr/lib",
          "dest": "lib"
        },
        {
          "library": "libsolarus.so.2",
          "source": "usr/lib",
          "dest": "lib"
        }
      ]
    }
  ]
}
