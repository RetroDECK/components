{
  "steam-rom-manager": [
    {
      "source_url": "com.steamgriddb.steam-rom-manager",
      "source_type": "flatpak_id",
      "version": "latest",
      "dest": "user",
      "extraction_type": "flatpak",
      "assets": [
        {
          "type": "dir",
          "source": "bin",
          "dest": "bin"
        },
        {
          "type": "dir",
          "source": "srm",
          "dest": "srm"
        },
        {
          "type": "dir",
          "source": "share/locale",
          "dest": "share/locale"
        }
      ],
      "libs": [
        {
          "library": "libffmpeg.so",
          "runtime_name": "org.freedesktop.Platform",
          "runtime_version": "25.08",
          "dest": "shared-libs"
        }
      ],
      "extras": [
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$SOURCE_VERSION"
        }
      ]
    }
  ]
}