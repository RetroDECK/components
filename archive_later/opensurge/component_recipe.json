{
  "opensurge": [
    {
      "source_url": "org.opensurge2d.OpenSurge",
      "source_type": "flatpak_id",
      "version": "$OPENSURGE_DESIRED_VERSION",
      "dest": "user",
      "extraction_type": "flatpak",
      "assets": [
        {
          "type": "dir",
          "source": "bin",
          "dest": "bin"
        },
        {
          "type": "dir",
          "source": "share/opensurge/",
          "dest": "opensurge"
        },
        {
          "type": "dir",
          "source": "share/licenses/org.opensurge2d.OpenSurge/",
          "dest": "docs"
        },
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$SOURCE_VERSION"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_functions.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_launcher.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_manifest.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_recipe.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_prepare.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_update.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        }
      ],
      "libs": [
        {
          "library": "liballegro.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_acodec.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_audio.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_color.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_dialog.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_font.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_image.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_main.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_memfile.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_physfs.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_primitives.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "liballegro_ttf.so.5.2",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "libGLU.so.1",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "libphysfs.so.1",
          "source": "lib",
          "dest": "shared-libs"
        },
        {
          "library": "libsurgescript.so.0.6.1",
          "source": "lib",
          "dest": "shared-libs"
        }
      ]
    }
  ]
}