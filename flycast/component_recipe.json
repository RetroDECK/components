{
  "flycast": {
    "source_url": "org.flycast.Flycast",
    "source_type": "flatpak_id",
    "version": "$FLYCAST_DESIRED_VERSION",
    "dest": "user",
    "extraction_type": "flatpak",
    "assets": [
      {
        "type": "dir",
        "source": "usr/bin",
        "dest": "bin"
      }
    ],
    "libs":  [],
    "extras": [
      {
        "type": "dir",
        "source": "$REPO_ROOT/$COMPONENT_NAME",
        "dest": "$COMPONENT_ARTIFACT_ROOT"
      }
    ]
  }
}
