{
  "pcsx2": [
    {
      "source_url": "https://github.com/PCSX2/pcsx2/releases/download/{VERSION}/pcsx2-*-linux-appimage-x64-Qt.AppImage",
      "source_type": "github_release",
      "version": "$PCSX2_DESIRED_VERSION",
      "extraction_type": "appimage",
      "assets": [
        {
          "type": "dir",
          "source": "usr/bin",
          "dest": "bin"
        },
        {
          "type": "dir",
          "source": "apprun-hooks",
          "dest": "apprun-hooks"
        },
        {
          "type": "dir",
          "source": "usr/lib",
          "dest": "lib"
        },
        {
          "type": "dir",
          "source": "usr/plugins",
          "dest": "plugins"
        },
        {
          "type": "create",
          "dest": "component_version",
          "contents": "$SOURCE_VERSION"
        },
        {
          "type": "dir",
          "source": "$REPO_ROOT/$COMPONENT_NAME/assets/rd_config",
          "dest": "rd_config"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_functions.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_launcher.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_manifest.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_recipe.json",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_prepare.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        },
        {
          "type": "file",
          "source": "$REPO_ROOT/$COMPONENT_NAME/component_update.sh",
          "dest": "$COMPONENT_ARTIFACT_ROOT"
        }
      ]
    },
    {
      "source_url": "https://github.com/xs1l3n7x/pcsx2_cheats_collection",
      "source_type": "git",
      "version": "latest",
      "extraction_type": "local",
      "assets": [
        {
          "type": "tar.gz",
          "source": "cheats/.",
          "dest": "rd_extras/pcsx2-cheats"
        }
      ]
    },
    {
      "source_url": "https://github.com/PCSX2/pcsx2_patches",
      "source_type": "git",
      "version": "latest",
      "extraction_type": "local",
      "assets": [
        {
          "type": "tar.gz",
          "source": "patches/.",
          "dest": "rd_extras/pcsx2-patches"
        }
      ]
    }
  ]
}
